
<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel">New deposit</h4>
  <button type="button" class="close" data-dismiss="modal">x</button>
</div>
<%= form_for BillRequest.new do |f| %>
  <div class="modal-body">
    <input type="number" name="message[amount]" class="form-control m-2" min="500" max="1000000" placeholder="Amount ">
    <input type="number" name="message[numberOfMonths]" class="form-control m-2" min="1" max="12" placeholder="Time in months">
    <input type="hidden" name="message[type]" value="deposit">
  </div>
  <div class="modal-footer">
    <%= f.submit "Create", class: 'btn btn-success' %>
  </div>
<% end %>