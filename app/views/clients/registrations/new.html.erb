<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<!--  вложенные атребуты-->
  <%= f.fields_for :client_attr, resource.client_attr ? resource.client_attr : resource.build_client_attr do |at| %>
    <div class="field">
      <%= at.label :first_name %><br />
      <%= at.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="field">
      <%= at.label :last_name %><br />
      <%= at.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>

    <div class="field">
      <%= at.label :birthday %><br />
      <%= at.date_field :birthday, autofocus: true, autocomplete: "birthday" %>
    </div>

    <div class="field">
      <%= at.radio_button :gender, 'Male' %>
      <%= at.label :gender, 'Male', value: 'Male' %>
      <%= at.radio_button :gender, 'Female' %>
      <%= at.label :gender, 'Female', value: 'Female' %>
    </div>

  <% end %>
<!--  капча-->
  <%= recaptcha_tags %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "clients/shared/links" %>
